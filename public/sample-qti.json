                "content": [
                  {
                    "@type": "paragraph",
                    "text": "What is the capital of France?"
                  },
                  {
                    "@type": "choiceInteraction",
                    "responseIdentifier": "RESPONSE",
                    "shuffle": false,
                    "maxChoices": 1,
                    "prompt": "Select the correct answer:",
                    "choices": [
                      {
                        "identifier": "london",
                        "text": "London"
                      },
                      {
                        "identifier": "berlin",
                        "text": "Berlin"
                      },
                      {
                        "identifier": "paris",

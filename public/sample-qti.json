    {
      "@type": "assessmentItem",
      "identifier": "extended_text_1",
      "title": "Essay Question: Climate Change",
      "adaptive": false,
      "timeDependent": false,
      "responseDeclaration": {
        "identifier": "RESPONSE",
        "cardinality": "single",
        "baseType": "string",
        "correctResponse": {
          "value": "Climate change refers to long-term shifts in global temperatures and weather patterns, primarily caused by human activities such as burning fossil fuels, which increase greenhouse gas concentrations in the atmosphere."
        }
      },
      "itemBody": {
        "content": [
          {
            "@type": "paragraph",
            "text": "Climate change is one of the most pressing issues of our time. In a well-structured essay of at least 200 words, explain what climate change is, identify its primary causes, and discuss at least two potential solutions that individuals or governments can implement to address this challenge."
          },
          {
            "@type": "paragraph",
            "text": "Your response should include:",
            "children": [
              {
                "@type": "list",
                "items": [
                  "A clear definition of climate change",
                  "At least two main causes",
                  "At least two proposed solutions",
                  "Supporting details and examples"
                ]
              }
            ]
          },
          {
            "@type": "extendedTextInteraction",
            "responseIdentifier": "RESPONSE",
            "attributes": {
              "expectedLength": "1000"
            }
          }
        ]
      }
    },

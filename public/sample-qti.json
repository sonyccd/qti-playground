              "responseProcessing": {
                "template": "http://www.imsglobal.org/question/qti_v3p0/rptemplates/match_correct"
              }
            },
            {
              "@type": "assessmentItem",
              "identifier": "programming_q2",
              "title": "Programming Languages",
              "adaptive": false,
              "timeDependent": false,
              "responseDeclaration": {
                "identifier": "RESPONSE",
                "cardinality": "multiple",
                "baseType": "identifier",
                "correctResponse": {
                  "value": ["python", "javascript", "java"]
                }
              },
              "outcomeDeclaration": {
                "identifier": "SCORE",
                "cardinality": "single",
                "baseType": "float",
                "defaultValue": 0
              },
              "itemBody": {
                "content": [
                  {
                    "@type": "paragraph",
                    "text": "Which of the following are programming languages? (Select all that apply)"
                  },
                  {
                    "@type": "choiceInteraction",
                    "responseIdentifier": "RESPONSE",
                    "shuffle": false,
                    "maxChoices": 5,
                    "prompt": "Select all correct answers:",
                    "choices": [
                      {
                        "identifier": "python",
                        "text": "Python"
                      },
                      {
                        "identifier": "html",
                        "text": "HTML"
                      },
                      {
                        "identifier": "javascript",
                        "text": "JavaScript"
                      },
                      {
                        "identifier": "java",
                        "text": "Java"
                      },
                      {
                        "identifier": "css",
                        "text": "CSS"
                      }
                    ]
                  }
                ]
              },
              "responseProcessing": {
                "customLogic": {
                  "type": "conditional",
                  "conditions": [
                    {
                      "if": "exact_match",
                      "score": 2.0
                    },
                    {
                      "if": "partial_match",
                      "requirement": ["python", "javascript"],
                      "score": 1.0
                    },
                    {
                      "else": 0.0
                    }
                  ]
                }
              }
            },
            {
              "@type": "assessmentItem",
              "identifier": "science_q3",
              "title": "Basic Science",
              "adaptive": false,
              "timeDependent": false,

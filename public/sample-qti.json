            {
              "@type": "assessmentItem",
              "identifier": "slider_q4",
              "title": "Temperature Assessment",
              "adaptive": false,
              "timeDependent": false,
              "responseDeclaration": {
                "identifier": "RESPONSE",
                "cardinality": "single",
                "baseType": "float",
                "correctResponse": {
                  "value": 100.0
                }
              },
              "outcomeDeclaration": {
                "identifier": "SCORE",
                "cardinality": "single",
                "baseType": "float",
                "defaultValue": 0
              },
              "itemBody": {
                "content": [
                  {
                    "@type": "paragraph",
                    "text": "At what temperature (Â°C) does water boil at sea level?"
                  },
                  {
                    "@type": "sliderInteraction",
                    "responseIdentifier": "RESPONSE",
                    "prompt": "Move the slider to select the temperature:",
                    "attributes": {
                      "lowerBound": "90",
                      "upperBound": "110",
                      "step": "1",
                      "orientation": "horizontal"
                    }
                  }
                ]
              },
              "responseProcessing": {
                "customLogic": {
                  "type": "range_scoring",
                  "exact_value": 100.0,
                  "score_ranges": [
                    {
                      "condition": "exact",
                      "value": 100.0,
                      "score": 2.0
                    },
                    {
                      "condition": "range",
                      "min": 98.0,
                      "max": 102.0,
                      "score": 1.5
                    },
                    {
                      "condition": "range",
                      "min": 95.0,
                      "max": 105.0,
                      "score": 1.0
                    },
                    {
                      "condition": "default",
                      "score": 0.0
                    }
                  ]
                }
              }
